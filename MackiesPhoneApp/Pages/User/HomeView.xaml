    <StackLayout Padding="0" BackgroundColor="{AppThemeBinding Light={StaticResource AppToolbarBackgroundColorLight}, Dark={StaticResource AppToolbarBackgroundColorDark}}">
        <Label x:Name="LoggedInUserDisplayName" 
       Text="" 
       FontSize="24" />


        <VerticalStackLayout >
        <Label Text="JJ Fisk - en seriÃ¸s fiskehandler"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               TextColor="White" />
                    
        <Label Margin="50" Text="Vi holder med fiskebilerne her :"                              
        FontSize="16"
        TextColor="White"
        LineHeight="1.5" />

        </VerticalStackLayout>

        <VerticalStackLayout Padding="10" BackgroundColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Black}}">

            <CollectionView x:Name="TruckLocationsCollectionView"              
            SelectionMode="None">
                <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" CornerRadius="8" BackgroundColor="{AppThemeBinding Light={StaticResource ViewItemBackgroundColorLight}, Dark={StaticResource ViewItemBackgroundColorDark}}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTruckLocationTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout>
                            <Label Text="{Binding StartDateRefined}" FontSize="16" TextColor="White" />
                            <Label Text="{Binding LocationName}" FontSize="16"  FontAttributes="Bold" TextColor="Black" />
                            <Label Text="{Binding OpenCloseInterval}" FontSize="16" TextColor="White" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        </VerticalStackLayout>
    </StackLayout>
    
    
</ContentView>
