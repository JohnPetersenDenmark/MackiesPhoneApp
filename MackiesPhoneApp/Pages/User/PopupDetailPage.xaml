<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="MackiesPhoneApp.Pages.User.PopupDetailPage"
               Color="White"
               Size="400,1200"
               >

    <VerticalStackLayout x:Name="MainLayout" Spacing="10" Padding="20">

        <Image Source="{Binding imageurl}" WidthRequest="250" HeightRequest="250"  Aspect="AspectFill"  VerticalOptions="Center" />
        <Label x:Name="ProductDescriptionLabel"
               Text="{Binding productdescription}"
               TextColor="Black"
               FontSize="18" />

        <WebView x:Name="ProductDetailsWebView"
                 HeightRequest="600"
                 HorizontalOptions="FillAndExpand"
                 VerticalOptions="FillAndExpand" />

    </VerticalStackLayout>
</toolkit:Popup>