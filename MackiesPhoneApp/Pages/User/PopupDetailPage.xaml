<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MackiesPhoneApp.Pages.User.PopupDetailPage"
               Color="White"
                Size="300,600" >

    <VerticalStackLayout Spacing="20"  Padding="10">
        <Image Source="{Binding imageurl}" WidthRequest="250" HeightRequest="250"  Aspect="AspectFill"  VerticalOptions="Center" />
        <Label Text="{Binding productdescription}" FontSize="16" VerticalOptions="Center"  TextColor="Black" />
    </VerticalStackLayout>
</toolkit:Popup>