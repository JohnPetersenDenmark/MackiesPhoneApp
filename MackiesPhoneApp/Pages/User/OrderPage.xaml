<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MackiesPhoneApp.Pages.User.OrderPage"
             x:Name="OrderPageRoot"
             Title="">

    <ContentPage.ToolbarItems>
        <ToolbarItem 
     
      IconImageSource="shopping.png" 
      Order="Primary" 
      Priority="0" 
      Clicked="OnGoToOrderBasket" />
    </ContentPage.ToolbarItems>


    <Grid >
        <CollectionView x:Name="OrderItemsCollectionView"              
      SelectionMode="None"
       >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" CornerRadius="8" BackgroundColor="#fe9abc">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnOrderItemTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout VerticalOptions="Center">
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="{Binding imageurl}" WidthRequest="100" HeightRequest="100"  Aspect="AspectFill"  VerticalOptions="Center" />
                                <VerticalStackLayout VerticalOptions="Center">
                                    <Label Text="{Binding pizzanumber}" FontSize="16" VerticalOptions="Center" TextColor="white" />
                                    <Label Text="{Binding productname}" FontSize="16"  VerticalOptions="Center" TextColor="white" />
                                    <Label Text="{Binding productdescription}" FontSize="16" VerticalOptions="Center"  TextColor="white" />
                                    <Label Text="{Binding unitprice, StringFormat='{0:C}'}" FontSize="16" VerticalOptions="Center"  TextColor="white" />
                                </VerticalStackLayout>
                                <Image Source="checkmark.png" IsVisible="{Binding IsInBasket}" WidthRequest="100" HeightRequest="100"  Aspect="AspectFill"  VerticalOptions="Center" />
                            </HorizontalStackLayout>

                            <HorizontalStackLayout >
                                <Image BackgroundColor="white" 
                                       IsVisible="{Binding IsQuantityVisible}"
                                       Source="minussign.png"
                                        WidthRequest="20" 
                                        InputTransparent="False">
                                    
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnImageMinusTapped" />
                                    </Image.GestureRecognizers>
                                </Image>

                                <Label IsVisible="{Binding IsQuantityVisible}" Text="{Binding quantity}" FontSize="16" VerticalOptions="Center" TextColor="white" />
                                <Image BackgroundColor="White"
                                       IsVisible="{Binding IsQuantityVisible}"
                                       Source="plussign.png"
                                        WidthRequest="20"
                                        HeightRequest="20">
                                    
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnImagePlusTapped" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <Button 
                                    IsVisible="{Binding IsQuantityVisible}"
                                    BackgroundColor="white" 
                                    TextColor="black" 
                                    Text="Put i kurven" Clicked="OnAddToBasketClicked" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>