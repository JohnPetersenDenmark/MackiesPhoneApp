<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MackiesPhoneApp.Pages.User.OrderPage"
             Title="OrderPage">


    <Grid >
        <CollectionView x:Name="OrderItemsCollectionView"              
      SelectionMode="None"
       >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" CornerRadius="8" BackgroundColor="#f0f0f0">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnOrderItemTapped" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout>
                            <HorizontalStackLayout Spacing="10">
                                <Image Source="{Binding imageurl}" WidthRequest="100" HeightRequest="100"  Aspect="AspectFill"  VerticalOptions="Center" />
                                <Label Text="{Binding pizzanumber}" FontSize="14" VerticalOptions="Center"  />
                                <Label Text="{Binding productname}" FontSize="14"  VerticalOptions="Center" TextColor="Black" />
                                <Label Text="{Binding unitprice}" FontSize="14" VerticalOptions="Center"  TextColor="Gray" />
                            </HorizontalStackLayout>
                            
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>