<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MackiesPhoneApp.Pages.User.CustomFlyoutPageV2"
            xmlns:pages="clr-namespace:MackiesPhoneApp.Pages.User"
             Title="CustomFlyoutPageV2">


    <FlyoutPage.Flyout>
        <ContentPage Title="FlyoutMenu"
                     BackgroundColor="{AppThemeBinding Light={StaticResource FlyoutBackgroundColorLight}, Dark={StaticResource FlyoutBackgroundColorDark}}">
            <ScrollView>
                <VerticalStackLayout Spacing="100">


                    <Label Text="" TextColor="{AppThemeBinding Light={StaticResource FlyoutHeadlineTextColorLight}, Dark={StaticResource FlyoutHeadlineTextColorLight}}" FontSize="24" FontAttributes="Bold" />


                    <Button BackgroundColor="{AppThemeBinding Light={StaticResource FlyoutMenuItemBackgroundColorLight}, Dark={StaticResource FlyoutMenuItemBackgroundColorDark}}"
                        Text="Log ind" 
                             FontSize="20" 
                            HeightRequest="100" 
                            MinimumHeightRequest="30"
                            WidthRequest="100"
                            CornerRadius="50"
                            Padding="0"
                        TextColor="{AppThemeBinding Light={StaticResource FlyoutMenuItemTextColorLight}, Dark={StaticResource FlyoutMenuItemTextColorDark}}"
                        Clicked="GoLogin_Clicked"/>

                    <Button BackgroundColor="{AppThemeBinding Light={StaticResource FlyoutMenuItemBackgroundColorLight}, Dark={StaticResource FlyoutMenuItemBackgroundColorDark}}"
                        Text="Home" 
                              FontSize="20" 
                             HeightRequest="100" 
                             MinimumHeightRequest="30"
                            WidthRequest="100"
                            CornerRadius="50"
                            Padding="0"
                        TextColor="{AppThemeBinding Light={StaticResource FlyoutMenuItemTextColorLight}, Dark={StaticResource FlyoutMenuItemTextColorDark}}"
                        Clicked="GoHome_Clicked"/>

                    <Button BackgroundColor="{AppThemeBinding Light={StaticResource FlyoutMenuItemBackgroundColorLight}, Dark={StaticResource FlyoutMenuItemBackgroundColorDark}}"
                        Text="Indstillinger" 
                             FontSize="20" 
                             HeightRequest="120" 
                             MinimumHeightRequest="30"
                            WidthRequest="120"
                            CornerRadius="50"
                            Padding="0"
                        TextColor="{AppThemeBinding Light={StaticResource FlyoutMenuItemTextColorLight}, Dark={StaticResource FlyoutMenuItemTextColorDark}}"
                        Clicked="GoSettings_Clicked"/>

                </VerticalStackLayout>
            </ScrollView>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage
        BarBackgroundColor= "{AppThemeBinding Light={StaticResource AppToolbarBackgroundColorLight}, Dark={StaticResource AppToolbarBackgroundColorLight}}"                           
        BarTextColor= "{AppThemeBinding Light={StaticResource HamburgerIconColorLight}, Dark={StaticResource FlyoutBackgroundColorDark}}">
            <x:Arguments>
                <pages:HomePage />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>