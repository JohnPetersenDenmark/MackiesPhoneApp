<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="MackiesPhoneApp.Pages.User.PopupOrderItemSelected"
    Size="300,600" >


    <VerticalStackLayout Padding="20" Spacing="15" BackgroundColor="White" >
        <Image x:Name="ProductImage" WidthRequest="250" HeightRequest="300"  Aspect="AspectFill"  VerticalOptions="Center" />
        <Label x:Name="ProductNameLabel" FontSize="20" FontAttributes="Bold" />
        <Label x:Name="ProducDescriptionLabel" FontSize="14" />
        <Label x:Name="ProductPriceLabel" FontSize="16" />

        <Stepper x:Name="QuantityStepper" Minimum="1" Maximum="10" Value="1" />
        <Label Text="{Binding Source={x:Reference QuantityStepper}, Path=Value, StringFormat='Quantity: {0}'}" />

        <Button Text="Add to Basket" Clicked="OnAddToBasketClicked"/>
    </VerticalStackLayout>
</toolkit:Popup>