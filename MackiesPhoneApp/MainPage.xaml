<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MackiesPhoneApp"
             x:Class="MackiesPhoneApp.MainPage"
              xmlns:UtilPages="clr-namespace:MackiesPhoneApp.Pages.User"
             BackgroundColor="white">

    <ContentPage.ToolbarItems >
        <ToolbarItem IconImageSource="hamburgericon.svg"
                     Text="Menu"
                     Priority="0"
                     Order="Primary"
                     Clicked="ToggleMenu_Clicked" />
    </ContentPage.ToolbarItems>
    
    <Grid>
        <!-- Flyout Menu -->
        <StackLayout x:Name="FlyoutMenu"
                     BackgroundColor="{AppThemeBinding Light={StaticResource FlyoutBackgroundColorLight}, Dark={StaticResource FlyoutBackgroundColorDark}}"
                     Padding="30"
                     WidthRequest="250"
                    IsVisible="False"
                     TranslationX="-250"
                     ZIndex="10"
                      HorizontalOptions="Start"
            VerticalOptions="FillAndExpand">


            <Label Text="Menu" TextColor="{AppThemeBinding Light={StaticResource FlyoutHeadlineTextColorLight}, Dark={StaticResource FlyoutHeadlineTextColorLight}}" FontSize="24" FontAttributes="Bold" />


            <Button BackgroundColor="{AppThemeBinding Light={StaticResource FlyoutMenuItemBackgroundColorLight}, Dark={StaticResource FlyoutMenuItemBackgroundColorDark}}"
                    Text="Home" 
                    TextColor="{AppThemeBinding Light={StaticResource FlyoutMenuItemTextColorLight}, Dark={StaticResource FlyoutMenuItemTextColorDark}}"
                    Clicked="GoHome_Clicked"/>

            <Button BackgroundColor="{AppThemeBinding Light={StaticResource FlyoutMenuItemBackgroundColorLight}, Dark={StaticResource FlyoutMenuItemBackgroundColorDark}}"
                Text="Settings" 
                TextColor="{AppThemeBinding Light={StaticResource FlyoutMenuItemTextColorLight}, Dark={StaticResource FlyoutMenuItemTextColorDark}}"
                Clicked="GoSettings_Clicked"/>
        </StackLayout>

        <!-- Main content area -->
        <ContentView x:Name="MainContent"
                     Grid.Row="0"
                     ZIndex="1" />

    </Grid>
</ContentPage>
